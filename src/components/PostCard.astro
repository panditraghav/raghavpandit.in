---
const { post } = Astro.props;
const descriptionSplit = post.data.description.split(" ");
---

<div
  class="flex sm:flex-row flex-col my-3 pr-2 rounded-md border border-neutral-300 justify-start"
>
  <div class="basis-1/3 flex justify-end items-center sm:mr-2 h-full">
    <img
      src={post.data.heroImage}
      alt={post.title}
      class="object-contain h-full rounded-l-md"
    />
  </div>
  <div class="basis-2/3 sm:mr-2 h-full">
    <div class="text-foreground text-2xl my-2">
      <a href={"/blog/" + post.slug}>
        {post.data.title}
      </a>
    </div>
    <div></div>
    <div class="text-foreground/80 my-2">
      {descriptionSplit.slice(0, 20).join(" ")}{" "}
      {descriptionSplit.length > 20 ? "..." : ""}
    </div>
  </div>
</div>
